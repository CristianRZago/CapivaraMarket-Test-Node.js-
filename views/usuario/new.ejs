<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<style>
    .form-container{
        border-radius: 10px;        
        box-shadow: 0px-0px-10px-0px;
        background: #fff;
    }
    h1,h3{
        text-align: center;
        color: #2f0b3a75;
    }
</style>

<body>
    <div class="container-fluid mt-5">
        <div class="row align-items-center">
            <div class="col-md-10 mx-auto col-lg-5">
                <form class="form-container p-4 p-md-5 border rounded-3" action="/usuario" method="POST">
                    <h1 class="mb-2">  Capivara Market</h1>
                    <h3 class="mb-4"> Cadastrar Novo Funcionario </h3>
                    <div class="form-group mb-10">
                        <label for="nome">Nome: </label>
                        <input type="text" class="form-control" name="nome">
                    </div>
                    <div class="form-group mb-10">
                        <label for="endereco">Endereco: </label>
                        <input type="text" class="form-control" name="endereco">
                    </div>
                    <div class="form-group mb-10">
                        <label for="dataNascimento">Data de Nascimento: </label>
                        <input type="text" class="form-control" name="dataNascimento">
                    </div>
                    <div class="form-group mb-10">
                        <label for="experiencia">Experiência: </label>
                        <input type="text" class="form-control" name="experiencia">
                    </div>
                    <div class="form-group mb-10">            
                        <label for="funcao">Função: </label>
                        <select class="form-control" name="funcao">
                            <option>Estoquista</option>
                            <option>Repositor</option>
                        </select>
                    </div>
                    <div class="form-group mb-10">
                        <label for="login">Login: </label>
                        <input type="text" class="form-control" name="login">
                    </div> 
                    <div class="form-group mb-10">
                        <label for="senha">Senha: </label>
                        <input type="text" class="form-control" name="senha">
                    </div>             
                    <button class="btn btn-lg btn-block">Enviar</button>
                    <a href="/usuario/cadastrados">Voltar</a>
                </form>
            </div>
        </div>
    </div>    
</body>

<%- include('../partials/footer') %>